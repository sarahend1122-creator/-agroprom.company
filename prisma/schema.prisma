generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Пользователь платформы (фермер, компания, дилер и т.д.)
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String

  role         UserRole

  name         String?
  companyName  String?
  phone        String?

  country      String?
  region       String?
  city         String?

  verifiedPersonal Boolean @default(false)
  verifiedCompany  Boolean @default(false)

  ratingAvg   Float   @default(0)
  ratingCount Int     @default(0)

  listings    Listing[]
  sentMessages    Message[]   @relation("SentMessages")
  conversationsAsBuyer Conversation[] @relation("BuyerConversations")
  conversationsAsSeller Conversation[] @relation("SellerConversations")
  reviewsWritten Review[]      @relation("ReviewsWritten")
  reviewsReceived Review[]     @relation("ReviewsReceived")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/// Объявление (для MVP только сельхозтехника: продажа / аренда)
model Listing {
  id        String   @id @default(cuid())
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String

  category     ListingCategory
  subCategory  String

  listingType  ListingType

  title        String
  description  String

  price        Decimal
  currency     String

  rentType     RentType?

  status       ListingStatus @default(ACTIVE)

  country      String
  region       String
  city         String

  latitude     Float?
  longitude    Float?

  viewsCount      Int      @default(0)
  favoritesCount  Int      @default(0)

  attributes   ListingAttribute[]
  media        Media[]
  conversations Conversation[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

/// Гибкие характеристики техники (бренд, год, мощность и т.п.)
model ListingAttribute {
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String

  name      String
  value     String
}

/// Медиа-файлы объявления (фото, документы)
model Media {
  id        String   @id @default(cuid())
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String

  url       String
  type      MediaType
  position  Int      @default(0)
}

/// Диалог покупатель-продавец по конкретному объявлению
model Conversation {
  id        String   @id @default(cuid())

  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String

  buyer     User     @relation("BuyerConversations", fields: [buyerId], references: [id])
  buyerId   String

  seller    User     @relation("SellerConversations", fields: [sellerId], references: [id])
  sellerId  String

  status    ConversationStatus @default(OPEN)

  messages  Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// Сообщение в чате
model Message {
  id             String       @id @default(cuid())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String

  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  senderId       String

  text           String
  readAt         DateTime?

  createdAt      DateTime @default(now())
}

/// Отзыв и рейтинг по завершённой сделке (на будущее, можно включить позже)
model Review {
  id          String   @id @default(cuid())

  fromUser    User     @relation("ReviewsWritten", fields: [fromUserId], references: [id])
  fromUserId  String

  toUser      User     @relation("ReviewsReceived", fields: [toUserId], references: [id])
  toUserId    String

  rating      Int
  comment     String?

  createdAt   DateTime @default(now())
}

enum UserRole {
  FARMER
  COMPANY
  DEALER
}

enum ListingCategory {
  AGRI_MACHINERY
}

enum ListingType {
  SALE
  RENT
}

enum RentType {
  HOUR
  DAY
  MONTH
}

enum ListingStatus {
  ACTIVE
  PENDING
  ARCHIVED
}

enum MediaType {
  IMAGE
  DOCUMENT
}

enum ConversationStatus {
  OPEN
  CLOSED
}

